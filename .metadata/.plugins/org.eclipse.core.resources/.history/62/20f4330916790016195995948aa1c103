package com.system.vacation.service;

import com.system.vacation.to.VacationSystemTO;

public interface IVacationService {
	
	public void retrieveVacationDetails(VacationSystemTO vacationSystemTO);
	
	public void createOrUpdateVacation(VacationSystemTO vacationSystemTO);
	
	public void cancelVacation(VacationSystemTO vacationSystemTO);
	
	public void retrievePendingVacationRequests(VacationSystemTO vacationSystemTO);
	
	public void approveVacation(VacationSystemTO vacationSystemTO);
	
	public void rejectVacation(VacationSystemTO vacationSystemTO);
}
